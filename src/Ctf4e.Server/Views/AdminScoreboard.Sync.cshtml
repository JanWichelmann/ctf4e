@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

<h3 class="header mt-5">
    @_localizer["Title"]
</h3>
<hr class="header">

<a class="btn btn-primary mb-2" asp-controller="AdminScoreboard" asp-action="DownloadAsCsv">
    <i class="bi bi-download"></i>
    @_localizer["DownloadCsv"]
</a>

<button class="btn btn-warning mb-2" href="#" data-bs-toggle="modal" data-bs-target="#modal-sync-moodle">
    <i class="bi bi-cloud-upload"></i>
    @_localizer["UploadMoodle"]
</button>

<div class="modal fade" id="modal-sync-moodle" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@_localizer["Modal:SyncMoodle:Title"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @_localizer["Modal:SyncMoodle:Body"]
            </div>
            <div class="modal-footer">
                <form method="post" asp-controller="AdminScoreboard" asp-action="UploadToMoodle">
                    <button type="submit" class="btn btn-outline-warning">@_localizer["Modal:SyncMoodle:Submit"]</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">@_localizer["Cancel"]</button>
                </form>
            </div>
        </div>
    </div>
</div>