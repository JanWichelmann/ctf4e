@model List<Ctf4e.Server.Models.Lab>
@using Microsoft.AspNetCore.Mvc.Localization
@using Ctf4e.Server.Models
@using Ctf4e.Server.Authorization
@inject IViewLocalizer _localizer
@{
    var currentUser = (User)ViewData["CurrentUser"];
}

<div class="float-end">
    @if(currentUser.Privileges.HasPrivileges(UserPrivileges.EditLabs))
    {
        <a role="button" class="btn btn-sm btn-primary" asp-controller="AdminLabs" asp-action="ShowCreateLabForm">
            <i class="bi bi-plus"></i>
            @_localizer["CreateLab"]
        </a>
    }
</div>

<h1 class="header">
    @_localizer["Title"]
</h1>
<hr class="header">

<table class="table table-sm table-bordered align-middle table-hover text-nowrap mt-2">
    <thead>
    <tr>
        <th scope="col">@_localizer["Labs:ID"]</th>
        <th scope="col">@_localizer["Labs:Name"]</th>
        <th scope="col">@_localizer["Labs:MaximumPoints"]</th>
        <th scope="col">@_localizer["Labs:MaximumFlagPoints"]</th>
        <th scope="col">@_localizer["Labs:Visible"]</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col">@_localizer["Actions"]</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    @foreach(var l in Model)
    {
        <tr>
            <td>@l.Id</td>
            <td>@l.Name</td>
            <td>@l.MaxPoints</td>
            <td>@l.MaxFlagPoints</td>
            <td>
                @if(l.Visible)
                {
                    <i class="bi bi-check-circle-fill text-success"></i>
                }
                else
                {
                    <i class="bi bi-x-circle-fill text-danger"></i>
                }
            </td>
            <td>
                <a asp-controller="AdminExercises" asp-action="RenderExerciseList" asp-route-labId="@l.Id" class="btn btn-sm btn-outline-primary" title="@_localizer["Labs:Exercises:Text"]">
                    <i class="bi bi-arrow-right"></i>
                    @_localizer["Labs:Exercises"]
                    <span class="badge bg-primary">
                        @l.Exercises.Count
                    </span>
                </a>
            </td>
            <td>
                <a asp-controller="AdminFlags" asp-action="RenderFlagList" asp-route-labId="@l.Id" class="btn btn-sm btn-outline-primary" title="@_localizer["Labs:Flags:Text"]">
                    <i class="bi bi-arrow-right"></i>
                    @_localizer["Labs:Flags"]
                    <span class="badge bg-primary">
                        @l.Flags.Count
                    </span>
                </a>
            </td>
            <td>
                @if(currentUser.Privileges.HasPrivileges(UserPrivileges.EditLabs))
                {
                    <a role="button" class="btn btn-sm btn-primary" asp-controller="AdminLabs" asp-action="ShowEditLabForm" asp-route-id="@l.Id">
                        <i class="bi bi-pencil"></i>
                        @_localizer["Edit"]
                    </a>
                    @if(!l.Executions.Any())
                    {
                        <a role="button" class="btn btn-sm btn-danger" href="#" data-bs-toggle="modal" data-bs-target="#modal-delete-lab" data-labid="@l.Id" data-labname="@l.Name">
                            <i class="bi bi-trash"></i>
                            @_localizer["Delete"]
                        </a>
                    }
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="modal fade" id="modal-delete-lab" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@_localizer["Modal:DeleteLab:Title"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @_localizer["Modal:DeleteLab:Body"]
            </div>
            <div class="modal-footer">
                <form asp-controller="AdminLabs" asp-action="DeleteLab" method="post">
                    <input type="hidden" data-replace="lab-id" name="id" value="">

                    <button type="submit" class="btn btn-outline-danger">@_localizer["Modal:DeleteLab:Submit"]</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@_localizer["Cancel"]</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
document.getElementById("modal-delete-lab").addEventListener("show.bs.modal", function(e)
{
    e.target.querySelector('input[data-replace="lab-id"]').value = e.relatedTarget.dataset.labid;
    e.target.querySelector('span[data-replace="lab-name"]').innerText = e.relatedTarget.dataset.labname;
});
</script>