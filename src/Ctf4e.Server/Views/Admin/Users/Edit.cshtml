@using Ctf4e.Server.Views
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminUserInputModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<GenericStrings> GenericLocalizer
@{
     
}

<div class="container">
    <h1 class="mt-4">
        @Localizer["Title"]
    </h1>
    <div class="header-rule"></div>

    <form asp-controller="AdminUsers" asp-action="EditUser" method="post">
    
        <partial name="InputForm.cshtml" model="Model" />

        <input type="hidden" asp-for="Id">

        <button type="submit" class="btn btn-primary">@GenericLocalizer["Form:Edit:Submit"]</button>
        <a asp-controller="AdminUsers" asp-action="RenderUserList" role="button" class="btn btn-outline-secondary">@GenericLocalizer["Form:Edit:Cancel"]</a>
    </form>
</div>