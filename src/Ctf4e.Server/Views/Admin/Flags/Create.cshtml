@using Ctf4e.Server.Views
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminFlagInputModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<GenericStrings> GenericLocalizer
@{
    
}                                                       

<div class="container">
    <h1 class="mt-4">
        @Localizer["Title"]
    </h1>
    <div class="header-rule"></div>

    <form asp-controller="AdminFlags" asp-action="CreateFlag" method="post">
    
        <partial name="InputForm.cshtml" model="Model" />

        <button type="submit" class="btn btn-primary">@GenericLocalizer["Form:Create:Submit"]</button>
        <a asp-controller="AdminFlags" asp-action="RenderFlagList" role="button" class="btn btn-outline-secondary">@GenericLocalizer["Form:Create:Cancel"]</a>
    </form>
</div>