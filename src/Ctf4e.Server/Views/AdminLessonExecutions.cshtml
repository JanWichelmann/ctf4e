@using Ctf4e.Server.Controllers
@{
    ViewData["Title"] = "Ausführungen verwalten";

    var viewType = (AdminLessonExecutionsController.ViewType)ViewData["ViewType"];
}

<div class="container">
    @if(viewType == AdminLessonExecutionsController.ViewType.List)
    {
        <partial name="AdminLessonExecutions.List.cshtml" />
    }
    else if(viewType == AdminLessonExecutionsController.ViewType.Edit)
    {
        <partial name="AdminLessonExecutions.Edit.cshtml" />
    }
    else if(viewType == AdminLessonExecutionsController.ViewType.CreateForGroup)
    {
        <partial name="AdminLessonExecutions.CreateForGroup.cshtml" />
    }
    else if(viewType == AdminLessonExecutionsController.ViewType.CreateForSlot)
    {
        <partial name="AdminLessonExecutions.CreateForSlot.cshtml" />
    }
</div>

@section ScriptsHead
{
    <link href="~/lib/flatpickr/css/flatpickr.min.css" rel="stylesheet" />
    <script src="~/lib/flatpickr/js/flatpickr.min.js"></script>
    <script src="~/lib/flatpickr/js/l10n/de.js"></script>
}