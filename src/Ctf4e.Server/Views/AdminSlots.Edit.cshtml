@model Ctf4e.Server.Models.Slot
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

<h3 class="header">
    @_localizer["Title"]
</h3>
<hr class="header">

<form asp-controller="AdminSlots" asp-action="EditSlot" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">@_localizer["Form:Name"]</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    @if(Model.Groups?.Any() == true)
    {
        <div class="mb-3">
            <label class="form-label">@_localizer["Groups"]</label>
            <table class="table table-sm table-bordered table-hover text-nowrap">
                <tbody>
                @foreach(var g in Model.Groups)
                {
                    <tr>
                        <td>@g.DisplayName (#@g.Id)</td>
                        <td>
                            <a role="button" class="btn btn-sm btn-primary" asp-controller="AdminGroups" asp-action="ShowEditGroupForm" asp-route-id="@g.Id">
                                <i class="bi bi-pencil"></i>
                                @_localizer["Groups:Edit"]
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    <input asp-for="Id" type="hidden">

    <button type="submit" class="btn btn-primary">@_localizer["Form:Submit"]</button>
    <a asp-controller="AdminSlots" asp-action="RenderSlotList" class="btn btn-secondary">@_localizer["Form:Cancel"]</a>
</form>