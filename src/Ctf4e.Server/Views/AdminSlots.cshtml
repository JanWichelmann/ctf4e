@using Ctf4e.Server.Controllers
@{
    ViewData["Title"] = "Terminslots verwalten";

    var viewType = (AdminSlotsController.ViewType)ViewData["ViewType"];
}

<div class="container">
    @if(viewType == AdminSlotsController.ViewType.List)
    {
        <partial name="AdminSlots.List.cshtml" />
    }
    else if(viewType == AdminSlotsController.ViewType.Edit)
    {
        <partial name="AdminSlots.Edit.cshtml" />
    }
    else if(viewType == AdminSlotsController.ViewType.Create)
    {
        <partial name="AdminSlots.Create.cshtml" />
    }
</div>