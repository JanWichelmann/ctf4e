@using Ctf4e.Server.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model Ctf4e.Server.ViewModels.AdminLabExecution
@{
    var slots = (List<Slot>)ViewData["Slots"];
    var labs = (List<Lab>)ViewData["Labs"];
}

<h1 class="header">
    @_localizer["Title"]
</h1>
<hr class="header">

<form asp-controller="AdminLabExecutions" asp-action="CreateLabExecutionForSlot" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="LabExecution.LabId">@_localizer["Form:LabId"]</label>
        <select asp-for="LabExecution.LabId" asp-items="@(new SelectList(labs, nameof(Lab.Id), nameof(Lab.Name)))" class="form-select">
            <option value="" disabled selected>@_localizer["Form:LabId:Placeholder"]</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="SlotId">@_localizer["Form:SlotId"]</label>
        <select asp-for="SlotId" asp-items="@(new SelectList(slots, nameof(Slot.Id), nameof(Slot.Name)))" class="form-select">
            <option value="" disabled selected>@_localizer["Form:SlotId:Placeholder"]</option>
        </select>
    </div>
    
    <partial name="AdminLabExecutions._Form.cshtml" />
    
    <div class="mb-3">
        <div class="form-check">
            <input asp-for="OverrideExisting" class="form-check-input">
            <label asp-for="OverrideExisting" class="form-check-label">@_localizer["Form:OverrideExisting"]</label>
            <small>
                @_localizer["Form:OverrideExisting:Description"]
            </small>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">@_localizer["Form:Submit"]</button>
    <a asp-controller="AdminLabExecutions" asp-action="RenderLabExecutionList" class="btn btn-secondary">@_localizer["Form:Cancel"]</a>
</form>