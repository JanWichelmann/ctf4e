<template id="toast-template-success">
    <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" data-content="message"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</template>

<template id="toast-template-error">
    <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" data-content="message"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</template>

<script>
    function showToast(type, message)
    {                                                  
        if (type !== "success" && type !== "error")
            throw new Error("Invalid toast type: " + type);
    
        const template = document.getElementById(`toast-template-${type}`);
        const cloned = template.content.cloneNode(true);
        const toastDiv = cloned.querySelector(".toast");

        toastDiv.querySelector("[data-content=message]").innerHTML = message;
        
        document.getElementById("toast-container").appendChild(toastDiv);
        new bootstrap.Toast(toastDiv, { delay: 3000 }).show();
    }
</script>